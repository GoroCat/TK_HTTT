<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QLY SIEU THI</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .menu-link {
            padding: 10px 15px;
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
            color: white;
        }

        .dropdown-toggle::after {
            margin-left: 5px;
            margin-bottom: 20px;
        }

        .hero-section {
            background-color: #f8f9fa;
            padding: 60px 0;
            text-align: center;
        }

            .hero-section h1 {
                font-size: 3em;
                font-weight: bold;
                color: #343a40;
            }

            .hero-section p {
                font-size: 1.2em;
                color: #6c757d;
            }

        .content-section {
            padding: 40px 0;
        }

            .content-section h2 {
                font-size: 2em;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .content-section p {
                font-size: 1.1em;
                color: #6c757d;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Main Navbar -->
        <div class="d-flex justify-content-around bg-dark py-2">
            @Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, new { @class = "menu-link" })
            </div>
        </div>

    <div class="container body-content">
        @RenderSection("home", required: false)
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
